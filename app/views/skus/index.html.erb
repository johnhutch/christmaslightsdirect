<p id="notice"><%= notice %></p>

<h1>Skus</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Position</th>
      <th>Item num</th>
      <th>Description</th>
      <th>Availability</th>
      <th>Casepack</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skus.each do |sku| %>
      <tr>
        <td><%= sku.product_id %></td>
        <td><%= sku.position %></td>
        <td><%= sku.item_num %></td>
        <td><%= sku.description %></td>
        <td><%= sku.availability_id %></td>
        <td><%= sku.casepack %></td>
        <td><%= sku.price %></td>
        <td><%= link_to 'Show', sku %></td>
        <td><%= link_to 'Edit', edit_sku_path(sku) %></td>
        <td><%= link_to 'Destroy', sku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

